<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Please sign in</h3>
      </div>
      <div class="panel-body">
        <%= form_tag sessions_path, { id: "signin" } do %>
          <p class="text-info"><%= notice %></p>
          <div class="form-group">
            <%= label_tag :account %>
            <%= text_field_tag :account, params[:account], :placeholder => "Account ID", :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= label_tag :pass %>
            <%= password_field_tag :pass, params[:pass], :placeholder => "Password", :class => "form-control" %>
          </div>
          <%= submit_tag "Sign in", :class => "btn btn-lg btn-primary btn-block" %>
        <% end %>
      </div>
      <div class="panel-footer">
        <%= link_to 'Participant here', :controller => 'users', :action => 'new', :new_type => "participant" %>
        <%= link_to 'Graduate here', :controller => 'users', :action => 'new', :new_type => "graduate" %>
      </div>
    </div>
  </div>
</div>
