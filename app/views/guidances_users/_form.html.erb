<%= form_for @guidances_user, :html => { class: "form-horizontal" } do |f| %>

  <div class="form-group">
    <%= f.label :user_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :user_id, class: "form-control" %>
      <%= content_tag :small, @guidances_user.errors.full_messages_for(:user_id).join(','), class: "text-danger" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :guidance_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :guidance_id, class: "form-control" %>
      <%= content_tag :small, @guidances_user.errors.full_messages_for(:guidance_id).join(','), class: "text-danger" %>
    </div>
  </div>

  <div class="actions">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
