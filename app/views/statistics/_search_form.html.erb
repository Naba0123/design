<%= fields_for :q, @search[cnt], {:index=>nil} do |f| %>
	<div class="form-group">
		<%= f.label :アカウント名, class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<%= f.text_field :account_cont,{ class: "form-control"} %>
		</div>
	</div>
  <div class="form-group">
    <%= f.label :氏名, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name_cont, {class: "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :国籍, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.localized_country_select :country_eq, [], { prompt: true }, { class: "form-control",name:"q[][country_eq]" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :住所, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :address_cont, {class: "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :電話番号, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.telephone_field :phone_cont, {class: "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :職業, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :job_cont, {class: "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :業種, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :job_kind_id_eq, JobKind.all, :id, :name, { prompt: true }, { class: "form-control"} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :生年月日, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <span class="date-controls">
        <%= f.date_select :birthday_gteq, { start_year: Time.now.year-30, end_year: Time.now.year, include_blank: true }, { class: "form-control input-sm" } %>
      </span>
      から
      <span class="date-controls">
        <%= f.date_select :birthday_lteq, { start_year: Time.now.year-30, end_year: Time.now.year, include_blank: true }, { class: "form-control input-sm" } %>
      </span>
      までの期間
    </div>
  </div>
<% end %>

