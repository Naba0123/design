<%= form_for @certificate, :html => { class: "form-horizontal" } do |f| %>


  <div class="form-group">
    <%= f.label :certificate_kind_id, t('activerecord.attributes.certificate.certificate_kind'), class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :certificate_kind_id, CertificateKind.all, :id, :name, { prompt: true }, { class: "form-control" } %>
      <%= content_tag :small, @certificate.errors.full_messages_for(:certificate_kind_id).join(','), class: "text-danger" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :finish_year, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :finish_year, class: "form-control" %>
      <%= content_tag :small, @certificate.errors.full_messages_for(:finish_year).join(','), class: "text-danger" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :count, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :count, class: "form-control" %>
      <%= content_tag :small, @certificate.errors.full_messages_for(:count).join(','), class: "text-danger" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :purpose, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :purpose, class: "form-control" %>
      <%= content_tag :small, @certificate.errors.full_messages_for(:purpose).join(','), class: "text-danger" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :another_address, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :another_address, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
