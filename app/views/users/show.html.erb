<h1><%= @user.name %>さんの情報</h1>
<p id="notice"><%= notice %></p>

<dl class="dl-horizontal">
  <dt>氏名</dt>
    <dd><%= @user.name%></dd>
  <dt>生年月日</dt>
    <dd><%= @user.birthday%></dd>
  <dt>国籍</dt>
    <dd><%= @user.country%></dd>
  <dt>住所</dt>
    <dd><%= @user.address%></dd>
  <dt>仕事</dt>
    <dd><%= @user.job%></dd>
  <dt>職種</dt>
    <dd><%= @user.job_kind.try(:name) %></dd>
  <dt>性別</dt>
    <dd><%= @user.gender%></dd>
  <%if @type ==:student %>
  <dt>学年</dt>
    <dd><%= @user.students.grade%></dd>
  <dt>学部</dt>
    <dd><%= @user.students.department%></dd>
  <% end %>
</dl>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
