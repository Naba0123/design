<% provide :title, 'Show' %>
<h1><%= @user.name %>(ut : <%= @user.user_type %>)さんの情報</h1>
<p id="notice"><%= notice %></p>

<dl class="dl-horizontal">
  <%= render 'show_def' %>
  <%unless @user.graduate.nil? %>
    <%= render 'show_grd' %>
  <% end %>
  <%unless @user.student.nil? %>
    <%= render 'show_std' %>
  <% end %>
  <%unless @user.participant.nil? %>
    <%= render 'show_prt' %>
  <% end %>

</dl>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
