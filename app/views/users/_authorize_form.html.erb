
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <% if @authorize_type == "graduate" %>
  
    <%= f.fields_for :graduate, :html => { class: "form-horizontal" } do |graduate_form| %>
      <div class="form-group">
        <%= f.label :is_entered, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= graduate_form.radio_button :is_entered, 1 %>
          <%= f.label 'True' %>
          <%= graduate_form.radio_button :is_entered, 0 %>
          <%= f.label 'False' %>
        </div>
      </div>
    <% end %>
  
  <% else %>
  
    <%= f.fields_for :participant, :html => { class: "form-horizontal" } do |participant_form| %>
    <div class="form-group">
      <%= f.label :Authorized, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= participant_form.radio_button :authorized, 1 %>
        <%= f.label 'True' %>
        <%= participant_form.radio_button :authorized, 0 %>
        <%= f.label 'False' %>
      </div>
    </div>
    <% end %>
  
  <% end %>
  
  <div class="actions">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
