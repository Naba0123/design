
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.fields_for :participant, :html => { class: "form-horizontal" } do |participant_form| %>
  <div class="form-group">
    <%= f.label :認証は？, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= participant_form.radio_button :unauthorized, 1 %>
      <%= f.label 'されてない' %>
      <%= participant_form.radio_button :unauthorized, 0 %>
      <%= f.label 'されてる' %>
    </div>
  </div>
  
  <% end %>
  <div class="actions">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
