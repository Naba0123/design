<%= form_for @current_user, :html => { class: "form-horizontal" } do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.fields_for :graduate, :html => { class: "form-horizontal" } do |graduate_form| %>
  <div class="form-group">
    <%= f.label :finish_date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= graduate_form.date_select :finish_date, { start_year: Time.now.year-30, end_year: Time.now.year, include_blank: true }, { class: "" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :is_change, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= graduate_form.radio_button :is_change, 1 %>
      <%= f.label 'True' %>
      <%= graduate_form.radio_button :is_change, 0 %>
      <%= f.label 'False' %>
    </div>
  </div>
  <% end %>
  
  <div class="actions">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
