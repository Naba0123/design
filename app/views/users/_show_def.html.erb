  <dd><%= l @user.birthday %></dd>
  <dt><%= t 'activerecord.attributes.user.gender' %></dt>
  <dd><%= t "sexes.#{@user.gender}" %></dd>
  <dt><%= t 'activerecord.attributes.user.user_type' %></dt>
  <dd><%= t "user_types.#{@user.user_type}" %></dd>
