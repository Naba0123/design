<% provide :title, 'Event' %>

<% breadcrumb :event %>

<p id="notice"><%= notice %></p>

<dl class="dl-horizontal">
  <dt><%= t("activerecord.attributes.event.event_name") %></dt>
   <dd><%= @event.name %></dd>

  <dt><%= t("activerecord.attributes.event.event_date") %></dt>
   <dd><%= @event.date %></dd>

  <dt><%= t("activerecord.attributes.event.event_place") %></dt>
    <dd><%= @event.place %></dd>

  <dt><%= t("activerecord.attributes.event.event_detail") %></dt>
    <dd><pre><%= @event.detail %></pre></dd>
</dl>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
