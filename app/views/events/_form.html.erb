<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :event_name %><br>
    <%= f.text_field :name, { class: "form-control" }  %>
  </div>
  <div class="field">
    <%= f.label :event_date %><br>
    <span class="date-controls">
      <%= f.date_select :date,{}, { :class=> "form-control input-sm" }  %>
    </span>
  </div>
  <div class="field">
    <%= f.label :event_place %><br>
    <%= f.text_field :place, { class: "form-control" }  %>
  </div>
  <div class="field">
    <%= f.label :event_detail %><br>
    <%= f.text_area :detail, { class: "form-control" }  %>
  </div>
  <div class="field">
    <%= f.submit %>
  </div>
<% end %>
