<%= form_for @guidance, :html => { class: "form-horizontal" } do |f| %>

  <div class="form-group">
    <%= f.label :guidance_date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <span class="date-controls">
        <%= f.date_select :guidance_date,{}, { :class => "form-control input-sm" } %>
        <%= content_tag :small, @guidance.errors.full_messages_for(:guidance_date).join(' '), class: "text-danger" %>
      </span>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :guidance_place, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :guidance_place, { class: "form-control" } %>
        <%= content_tag :small, @guidance.errors.full_messages_for(:guidance_place).join(' '), class: "text-danger" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :guidance_kind_id, t('activerecord.attributes.guidance.guidance_kind'), class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :guidance_kind_id, GuidanceKind.all, :id, :name, { prompt: true }, { class: "form-control" } %>
        <%= content_tag :small, @guidance.errors.full_messages_for(:guidance_kind_id).join(' '), class: "text-danger" %>
    </div>
  </div>
  <div class="actions">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>

<% end %>
